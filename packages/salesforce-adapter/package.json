{
  "name": "salesforce-adapter",
  "version": "0.1.0",
  "description": "Salto Salesforce adapter",
  "repository": {
    "type": "git",
    "url": "https://github.com/salto-io/adapters"
  },
  "private": true,
  "bin": "./dist/main.js",
  "scripts": {
    "prepare": "npm run build",
