    "eslint-plugin-react": "^7.13.0",
    "jest": "^24.0.0",
    "jest-junit": "^6.4.0",
    "prettier": "^1.17.1",
    "shelljs": "^0.8.1",
    "supertest": "^3.0.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.2",
    "ts-node": "^5.0.0",
    "typescript": "^3.4.5"
  }
